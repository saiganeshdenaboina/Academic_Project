Order List	http://127.0.0.1:8000/accounts/orders/
403 Permission Denied	http://127.0.0.1:8000/accounts/403/
404 Page Not Found	http://127.0.0.1:8000/accounts/404/


from accounts.models import CustomUser, Role

# Fetch the user
user = CustomUser.objects.get(username="admin")

# Fetch or create the "Admin" role
admin_role, created = Role.objects.get_or_create(name="Admin")

# Assign the role to the user
user.role = admin_role
user.save()

print(f"Updated {user.username} to role: {user.role.name}")
